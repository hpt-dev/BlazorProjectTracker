@using MyApplication.Models

<MudDialog>
    <DialogContent>
        <div class="d-flex flex-column py-1">
            <MudTextField T="string" Label="Name" Variant="Variant.Outlined" @bind-Value="@workItem.Name" Lines="1" />
            <MudDivider/>
            <MudTextField T="string" Label="Description" Variant="Variant.Outlined" @bind-Value="@workItem.Description" Lines="5" />
        </div>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">Ok</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    void Submit() => MudDialog.Close(DialogResult.Ok(workItem));

    void Cancel() => MudDialog.Cancel();

    [Parameter]
    public WorkItem workItem { get; set; }
}


